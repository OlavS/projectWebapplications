@*
    Viser en modal som tillater brukeren å logge inn med epostadresse og passord.
    Brukeren kan også gå herfra rett til bestilling via en knapp.
    Dersom brukeropplysningene ikke stemmer vil en feilmelding vises under
    passordfeltet.
*@

@model Model.ViewModels.LogInVM
<div class="modal fade" id="loggInnModal" tabindex="-1" role="dialog" aria-labelledby="logginnModalLabel" aria-hidden="true">
    @using (Ajax.BeginForm("LogOnModal", "User", new AjaxOptions { HttpMethod = "POST", OnSuccess = "LogOnModal" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-body">
                    <div class="modal-title font-weight-bold mb-3">Logg inn</div>
                    <hr />
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "", id= "" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-sm", id = "epostFelt" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", id = "epostmelding" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "", id = "" })
                            @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control form-control-sm", id = "" } })
                            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger", id = "passordmelding" })
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <input type="submit" value="Logg inn" class="btn btn-dark" />
                            </div>
                            <div class="col">
                                @Html.ActionLink("Opprett bruker", "RegisterUser", "User", null, new { @class = "btn btn-dark"})
                                @Html.ActionLink("Glemt passord", "ChangePassword", "User", null, new { @class = "a"})
                            </div>
                        </div>
                        <button type="button" class="btn filmModalClose" data-dismiss="modal">&times;</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/Oblig1/LoggInnModal.js"></script>