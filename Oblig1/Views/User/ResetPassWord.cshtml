@model Model.ViewModels.UserVM
@{
    ViewBag.Title = "EndrePassord";
}

@using (Html.BeginForm())
{
    <!--
    TODO: annen bedre identitetssjekk
    -->
    @Html.AntiForgeryToken()
    <h2>Lag nytt passord for @Model.Email</h2>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-10 col-12">
                <div class="form-group">
                    <div>
                        @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "", id = "" })
                        @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control form-control-sm", @autofocus = "autofocus", id = "" } })
                        @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger", id = "epostmelding" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.PassWordRepeat, htmlAttributes: new { @class = "", id = "" })
                        @Html.EditorFor(model => model.PassWordRepeat, new { htmlAttributes = new { @class = "form-control form-control-sm", @autofocus = "autofocus", id = "" } })
                        @Html.ValidationMessageFor(model => model.PassWordRepeat, "", new { @class = "text-danger", id = "epostmelding" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <input id="registrerKnapp" type="submit" value="Reset Passord" class="btn btn-dark" />
        </div>
    </div>

}