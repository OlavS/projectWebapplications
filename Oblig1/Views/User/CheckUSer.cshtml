@model Model.ViewModels.UserVM
@{
    ViewBag.Title = "EndrePassord";

}

@using (Html.BeginForm())
{
<!--
TODO: For framtiden: Løsning med email vertification istedet.
-->
    @Html.AntiForgeryToken()
    <h2>Vennligst fyll inn korrekt Personolia for @Model.Email</h2>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-10 col-12">
                <div class="form-group">
                    <div>
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "", id = "" })
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control form-control-sm", @autofocus = "autofocus", id = "" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", id = "epostmelding" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.SurName, htmlAttributes: new { @class = "", id = "" })
                        @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control form-control-sm", @autofocus = "autofocus", id = "" } })
                        @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger", id = "epostmelding" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.PhoneNr, htmlAttributes: new { @class = "", id = "" })
                        @Html.EditorFor(model => model.PhoneNr, new { htmlAttributes = new { @class = "form-control form-control-sm", @autofocus = "autofocus", id = "" } })
                        @Html.ValidationMessageFor(model => model.PhoneNr, "", new { @class = "text-danger", id = "epostmelding" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <input id="registrerKnapp" type="submit" value="Reset Passord" class="btn btn-dark" />
        </div>
    </div>

}