@model List<Model.ViewModels.OrderVM>

@{
    ViewBag.Title = "KundesOrdrer";
}

<h2>Mine Ordre</h2>
<hr />

@foreach (var item in Model)
{
    <table class="table table-dark">
        <tr>
            <th>
                <h6>@Html.DisplayNameFor(model => model[0].Date)  @Html.DisplayFor(modelItem => item.Date)</h6>
                <h6>
                    @Html.DisplayNameFor(model => model[0].OrderNr)  @Html.DisplayFor(modelItem => item.OrderNr)

                    <span class="float-right">@Html.DisplayNameFor(model => model[0].TotalPrice)  @Html.DisplayFor(modelItem => item.TotalPrice) kr </span>
                </h6>
            </th>
        </tr>
        <tr>
            <td>
                <p>
                    <button class="btn btn-secondary btn-sm " type="button" data-toggle="collapse" data-target="#collapse@{@item.OrderNr} " aria-expanded="false" aria-controls="collapseExample">
                       <h6 class="dropdown-toggle">Filmer</h6>
                    </button>
                </p>
                <div class="collapse" id="collapse@{@item.OrderNr}">
                    <div class="card card-body bg-notSoDark">

                        <table class="table table-dark table-dark-inner">

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => item.OrderLines[0].Title)
                                </th>
                                <th>
                                    <span class="float-right">  @Html.DisplayNameFor(model => item.OrderLines[0].Price) </span>
                                </th>
                            </tr>

                            @foreach (var list in item.OrderLines)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => list.Title)
                                    </td>
                                    <td>
                                        <span class="float-right">   @Html.DisplayFor(modelItem => list.Price) ,-</span>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </td>
        </tr>
    </table>
}